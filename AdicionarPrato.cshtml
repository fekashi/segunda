@model RestauranteMvc.Models.PratoModel

<!DOCTYPE html>
<html>
<head>
    <title>Adicionar Prato</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <h2>Adicionar Novo Prato</h2>
        <form method="post" action="/Home/AdicionarPrato">
            <div class="form-group">
                <label>Nome do Prato:</label>
                <input type="text" name="Nome" class="form-control" required />
            </div>
            <div class="form-group">
                <label>Preço:</label>
                <input type="number" name="Preco" class="form-control" step="0.01" required />
            </div>
            <div class="form-group">
                <label>URL da Imagem:</label>
                <input type="url" name="ImagemUrl" class="form-control"/>
            </div>
            <button type="submit" class="btn btn-primary">Adicionar</button>
        </form>
        <br />
        <a href="/Home/Cardapio" class="btn btn-secondary">Voltar ao Cardápio</a>
    </div>
</body>
</html>
